{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Backend",
            "type": "coreclr",
            "request": "launch",
            "program": "dotnet",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/Backend/MovieLibrary.API/MovieLibrary.API.csproj",
                "--launch-profile",
                "https"
            ],
            "cwd": "${workspaceFolder}/Backend/MovieLibrary.API",
            "console": "integratedTerminal",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/swagger"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Launch Frontend",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "dev:delay"],
            "cwd": "${workspaceFolder}/Frontend",
            "console": "integratedTerminal",
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "Local:\\s+(http://\\S+)",
                "uriFormat": "%s"
            }
        },
        {
            "name": "Run UnitTests",
            "type": "coreclr",
            "request": "launch",
            "program": "dotnet",
            "args": [
                "test",
                "${workspaceFolder}/Backend/MovieLibrary.Tests/MovieLibrary.Tests.csproj",
                "--logger:console;verbosity=detailed",
                "--nologo"
            ],
            "cwd": "${workspaceFolder}/Backend/MovieLibrary.Tests",
            "console": "integratedTerminal",
            "stopAtEntry": false
        }
    ],
    "compounds": [
        {
            "name": "Launch Fullstack",
            "configurations": ["Launch Backend", "Launch Frontend"],
            "stopAll": true
        }
    ]
}
